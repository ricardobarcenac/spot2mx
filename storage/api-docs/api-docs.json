        "/api/redirect/{shortUrl}": {
            "get": {
                "tags": [
                    "Redirect"
                ],
                "summary": "Redireccionar shortcut",
                "description": "Obtiene la URL original de un shortcut y incrementa las visitas",
                "operationId": "redirectShortcut",
                "parameters": [
                    {
                        "name": "shortUrl",
                        "in": "path",
                        "description": "Código corto del shortcut",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "abc123"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "URL encontrada exitosamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "URL found successfully"
                                        },
                                        "data": {
                                            "properties": {
                                                "original_url": {
                                                    "type": "string",
                                                    "example": "https://www.google.com"
                                                },
                                                "short_url": {
                                                    "type": "string",
                                                    "example": "abc123"
                                                },
                                                "visits": {
                                                    "type": "integer",
                                                    "example": 11
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Shortcut no encontrado o inactivo",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Short URL not found or inactive"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
